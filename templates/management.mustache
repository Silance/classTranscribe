<script>
    // testing data
    var schoolTermsList = ["","Spring 2016", "Fall 2016","Spring 2017", "Fall 2017", "Spring 2018"];
    // subject, class number, class name, instructor name, unique class id
    var courseList = {"Spring 2016":[["CS123",123,"Class name A","Instructor A", 1],
        ["CS223",223,"Class name B","Instructor A", 2],
        ["CS323",323,"Class name C","Instructor C",3]],
        "Fall 2016":[["CS123",167,"Class name 167","Instructor C",4],
            ["CS545",545,"Class name 545","Instructor J",5],
            ["CS523",523,"Class name 523","Instructor Q",6]],
        "Spring 2017":[], "Fall 2017":[], "Spring 2018":[]};
    var uid=7;

    // populate school term options
    var termSelection = document.getElementById("school-term");
    schoolTermsList.forEach(function(element) {
        var option = document.createElement("option");
        option.text = element;
        option.value = element;
        termSelection.add(option);
    });

    // populate course list for the selected term, refresh on change
    var courses = document.getElementById("course-list");
    $( "#school-term" ).change(function(e) {
        var term = document.getElementById("school-term");
        var selectedTerm = $("#school-term").val();
        var classes = courseList[selectedTerm];
        var html = '';
        html+='<tr id="#header">'+
                '<th>Subject</th>'+
                '<th>Course Number</th>'+
                '<th>Course Name</th>'+
                '<th>Course Instructor</th>'+
                '<th>Action</th>'+
                '</tr>';
        classes.forEach(function(elem){
            html += '<tr>';
            for (var i = 0; i < 4; i++) {
                html += '<td>' + elem[i] + '</td>';
            }
            html += '<td>' + '<button>action</button>' + '</td>';
            html += '</tr>';

            //append created html to the table body:
            //$('#course-list').append(html);
        });
        $("#course-list").html(html);
        //$( "div.courses-data" ).replaceWith(html);
        // print out js object detail
        //alert(JSON.stringify(e, null, 4));
    });



    // create new course
    $("#creation-form").submit(function(e) {
        //alert("submit clicked");
        //alert( JSON.stringify($('#creation-form :input'), null, 4));
        //alert(JSON.stringify($('#creation-form').serializeArray(), null, 4));
        e.preventDefault();
        var term = document.getElementById("school-term");
        var newCourse = [];
        $('#creation-form').serializeArray().forEach(function (elem) {
            newCourse.push(elem["value"]);
            //alert(JSON.stringify(elem["value"], null, 4));
        });
        //alert(JSON.stringify(newCourse, null, 4));
        //alert($("#school-term").val());
        //alert($("#school-term").val()!='')
        if($("#school-term").val()!='') {
            courseList[$("#school-term").val()].push(newCourse);
            //alert(JSON.stringify(courseList, null, 4));
            // change list

            $("#course-list").append('<tr>' +
                    '<td>' + newCourse[0] + '</td>' +
                    '<td>' + newCourse[1] + '</td>' +
